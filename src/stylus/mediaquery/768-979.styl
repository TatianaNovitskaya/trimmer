@media (min-width: 768px) and (max-width: 979px) {
	
	main {
		
		overflow: hidden
	}
	
	.wrapper {
		max-width: 91%
	}
	
	.mobile-none {
		display: none
	}
	
	.desktop-none {
		display: block;
	}
	
	.title {
		h1 {
			font-size: rem(45);
			line-height: rem(60);
		}
		
		h2 {
			font-size: rem(35);
			line-height: rem(45);
		}
	}
	
	.btn-cart {
		position: fixed;
		right: 1rem;
		width: rem(70)
		height: rem(70)
	}
	
	.shopping-bag-svg {
		width: rem(35)
		height: rem(32)
	}
	
	.top-info {
		padding: 1.3rem 0 1.9rem;
		background: #1b1b1b url("../images/bg-1-mob.jpg") no-repeat;
		background-size: contain;
		
		&:after {
			top: -6.4rem;
			right: 0.4rem
		}
	}
	
	.top-info__item__wrap {
		width: 100%
		max-width: rem(680)
		margin: auto
		flex-direction: column-reverse
		justify-content: center
		align-items: center
	}
	
	.top-info__img {
		width: 13.63rem;
		margin: 1.8rem auto 0
	}
	
	.top-info__item-1 {
		width: 100%
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	#timer-1 {
		margin: -0.55rem 0 0;
		//transform: scale(1.3);
		//width: 26.18rem;
		justify-content: space-between
	}
	
	#timer-1 .countdown-item, #timer-2 .countdown-item, #timer-3 .countdown-item {
		margin: 0 1.48rem 0 0
		&:last-child{
			margin-right: 0
		}
	}
	
	.top-info__price {
		margin: 6.4rem auto 0;
		align-items: baseline
	}
	
	
	.top-info__sale {
		margin-top: 0.4rem;
		width: 100%
		p {
			font-size: rem(60);
			margin-right: 6.1rem;
		}
		
		span {
			font-size: rem(50);
			line-height: 1.1;
			margin: 0rem 0rem 0 2.9rem;
		}
	}
	
	
	.top-info__discount-btn {
		margin-top: 0.7rem
	}
	
	.our-pluses {
		background: #fff;
		padding: 3.6rem 0 3.5rem;
		position: relative;
	}
	
	.our-pluses__wrap {
		width: 100%
		max-width: rem(680)
		margin: auto
		//flex-direction: column
		justify-content: center
		align-items: center
		flex-wrap: wrap
	}
	
	.our-pluses__item {
		margin: 0 2.2rem 5.4rem;
		&:last-child {
			margin-bottom: 0
		}
	}
	
	
	.advantages {
		-webkit-background-size: cover
		background-size: cover
		padding: 1.9rem 0
	}
	
	.advantages__wrap {
		margin: 0.6rem auto 0;
		width: 100%
		max-width: rem(680)
		flex-direction: column
		justify-content: center
		align-items: center
	}
	
	.advantages__column-left {
		padding-left: 0;
		width: 100%;
		max-width: 100%;
	}
	
	.advantages__item {
		height: rem(90)
	}
	
	.advantages__item-txt {
		width: 85%
		
	}
	
	.advantages__item-icon {
		margin-right: 1.1rem;
		margin-left: 0.45rem;
	}
	
	.advantages__img {
		margin: 0.9rem auto 0rem;
	}
	
	.advantages__column-right {
		padding-right: 0;
		width: 100%;
		max-width: 100%;
	}
	
	
	.about-product {
		padding: 1.6em 0 2.35rem;
	}
	
	
	.about-product__wrap {
		margin: 2.1rem auto 0;
		width: 100%
		max-width: 30.5rem
		justify-content: space-between
		align-items: center
		flex-wrap: wrap
	}
	
	.about-product__item {
		margin: 0.5rem 0
	}
	
	.product {
		background-color: #2A2A2A;
		background-image: none
		padding: 1.9rem 0;
	}
	
	.product__item:after {
		width: 38.69rem;
		height: 56.84rem;
		top: auto;
		bottom: -2rem;
		right: -25.9rem;
		opacity: 0.5
	}
	
	.product__item {
		width: 100%;
		background: #2a2a2a;
		padding: 0;
		max-width: rem(490)
		flex-direction: column
		justify-content: center
		align-items: center
		margin: auto
	
	}
	
	.product__item-column {
		width: 100%;
		max-width: 100%;
		margin-left: 0;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		position: relative
		z-index: 5
	}
	
	.product__img {
		position: absolute
		margin: 0
		width: 12.83rem;
		top: 23.8rem;
		left: 1.2rem;
	}
	
	.product__title {
		
		h2 {
			font-size: rem(35);
			line-height: rem(45);
		}
	}
	
	#timer-2 {
		margin: 4.35rem auto 0;
		//transform: scale(1.5);
		justify-content: space-between;
	}
	#timer-2 .countdown-item p {
		font-size: 0.7rem;
		margin-top: 1.5rem;
	}
	.product__price {
		margin-top: 10.1rem;
		width: 100%;
		margin-left: -3rem
		.old-price {
			font-size: rem(35);
			line-height: rem(45);
		}
		
		.new-price {
			font-size: rem(65);
			line-height: rem(90);
		}
	}
	
	.product__form {
		width: 100%;
		max-width: rem(360);
		margin: 19.2rem auto 0;
	}
	.order-form{
		input{
			background: #2a2a2a
		}
		button{
			background: #2a2a2a
		}
	}
	
	.important-info {
		padding: 1.8rem 0 1.3rem;
	}
	
	.important-info .wrapper:before {
		display: none
	}
	
	.important-info__wrap {
		width: 100%;
		max-width: rem(680)
		flex-direction: column
		justify-content: center
		align-items: center
		margin: auto
	}
	
	.important-info__column {
		width: 100%;
	}
	
	.important-info__img {
		margin: 2.9rem auto 0;
	}
	
	.important-info__item {
		padding: 1rem 0.2rem 1rem 0.9rem;
		margin-bottom: 1.2rem;
		margin-top: 1.2rem;
		
		&:last-child {
			margin-bottom: 0
		}
	}
	
	.important-info__item:before {
		left: 99.5%
	}
	
	.our-work {
		position: relative;
		padding: 1.7rem 0 1.8rem;
	}
	
	.our-work__wrap {
		width: 100%;
		max-width: rem(680)
		//flex-direction: column
		flex-wrap: wrap
		justify-content: center
		align-items: center
		margin: 1.8rem auto 0;
	}
	
	.our-work__item {
		width: 100%;
		margin: 0 2rem 2.6rem;
		
		&:last-child {
			margin-bottom: 0
		}
	}
	
	.our-work__item-txt {
		margin-top: 1.29rem;
	}
	
	.review {
		padding: 1.9rem 0 3.8rem;
	}
	
	.review .wrapper:before {
		display: none
	}
	
	.review__slider .swiper-container {
	}
	
	.review__item {
		width: 100% !important
		padding: 0.88rem 1rem 1.58rem 0.88rem
	}
	
	.review__item-column {
		width: 49%
	}
	
	
	.review__item-txt {
		margin-top: 0.9rem;
		p{
			font-size: 1rem
		}
	}
	
	.review__button-prev {
		left: -0.9rem;
		top: 20.2rem;
	}
	
	.review__button-next {
		right: -0.9rem;
		top: 20.2rem;
	}
	
	.user-photo {
		//width: rem(230)
		margin: 1rem auto 0;
	}
	
	.review__swiper-pagination {
		bottom: -2.3rem;
	}
	
	.bottom-info {
		padding: 1.8rem 0
		background: linear-gradient(to bottom, #2a2a2a 0%, #212121 45%, #151515 50%, #080808 55%, #000 100%)
		&:before {
			background: url("../images/bg-5-mob.png") no-repeat
			background-size: cover
			width: rem(628)
			height: rem(950)
			top: 7rem
			left: auto
			right: 23rem
			z-index: 5
			opacity: 0.6
		}
		
	}
	
	.bottom-info__column {
		width: 100%;
		max-width: rem(680)
		flex-direction: column
		justify-content: center
		align-items: center
		margin: 0rem auto 0;
	}
	
	.bottom-info__title {
		text-align: center
		h1 {
			font-size: rem(45);
			line-height: rem(65);
		}
	}
	
	#timer-3 {
		margin: 0 auto;
		position: absolute;
		top: 1.5rem;
		//transform scale(1.3)
	}
	
	.bottom-info__item__wrap {
		flex-direction: column
		justify-content: center
		align-items: center
		.countdown-wrapper {
			width: 100%;
		}
	}
	
	.bottom-info__item-1 {
		width: 100%
		position: relative
		z-index: 10
	}
	
	.bottom-info__sale {
		margin: 11.7rem 0 0 12.6rem;
		
	}
	
	.bottom-info__price {
		margin-top: 23.9rem;
		margin-right: 0rem;
		.old-price {
			font-size: rem(30);
			line-height: rem(45);
		}
		
		.new-price {
			font-size: rem(60);
			line-height: rem(90);
			margin-right: rem(0)
		}
	}
	
	.bottom-info__form {
		margin: 1.5rem auto 0;
	}
	
	.bottom-info__img {
		margin: 0;
		position: absolute;
		top: 24.9rem;
		right: 4.4rem;
	}
	
	.footer {
		padding: 1.2rem 0;
	}
	
	.footer__column {
		h3 {
			text-align: center
		}
		
		&:last-child {
			padding-left: 0
		}
	}
	
	.footer__column-list {
		display: none
	}
	
	.policy-txt {
		display: none
	}
}
