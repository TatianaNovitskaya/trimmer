.advantages {
	padding: 3.1rem 0
	background: #2A2A2A;
	position: relative
	background: url("../images/texture.jpg") no-repeat
	background-size: cover
}

.advantages__title {
	text-align: center
	h2{
		color: #ffffff
	}
}

.advantages__wrap {
	margin-top: 3.1rem
	display: flex
	justify-content: space-between
	align-items: flex-start
	
}

.advantages__column-left {
	padding-left: rem(87)
	width: 100%
	max-width: rem(467)
	
	.advantages__item {
		border-right: 1px solid rgba(#fff, 0.5)
	}
	
}

.advantages__item {
	display: flex
	align-items: center
	width: 100%
	height: rem(190)
	border-bottom: 1px solid rgba(#fff, 0.5)
	&:last-child {
		border-bottom: none
	}
}

.advantages__item-icon {
	width: rem(32)
	height: rem(32)
	margin-right: 1.5rem
	margin-left: 0.65rem
}

.advantages__item-txt {
	width: 80%
	
	p {
		color: #C99655;
		font-size: rem(20);
		line-height: rem(30);
		font-weight: 400
	}
}

.advantages__img {
	width: 10.63rem;
	transform: scale(-1,1);
	margin: 0.3rem 0 0 0rem;
	animation: move-right-scale 2s ease-in-out alternate infinite;
}

.advantages__column-right {
	padding-right: rem(59)
	width: 100%
	max-width: rem(439)
	.advantages__item {
		border-left: 1px solid rgba(#fff, 0.5)
	}
	
}
	.advantages__discount-btn{
		display: flex
		justify-content: center
		align-items center;
		margin-top: 1.2rem
	}