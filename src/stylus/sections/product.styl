.product {
	padding: 4.6rem 0
	position: relative
	background: url("../images/bg-3.jpg") no-repeat
	background-size: cover
	
}

.product__item {
	width: 108.7%;
	margin-left: -3.1rem;
	background: #2a2a2a
	padding: 3rem 3rem 1.1rem
	display: flex
	align-items: flex-start
	position: relative
	 &:after {
	     content: "";
	     display: block;
	     position: absolute;
		 background: url("../images/man-1.png") no-repeat
		 background-size: cover
		 width: rem(475)
		 height: rem(695)
		 top: -3.5rem;
		 right: -7.9rem;
		 pointer-events none
	 }
}

.product__img {
	width: 12.53rem;
	transform: scale(-1, 1);
	margin: 1.2rem 0 0 4.8rem;
	animation: move-right-scale 2s ease-in-out alternate infinite;
}

.product__item-column {
	width: 100%
	max-width: rem(545)
	margin-left: 2.2rem
}

.product__title {
	text-align: center
	
	h2 {
		color: #C99655;
		
	}
}

.product__price {
	text-align: right
	display: flex
	flex-direction: column
	align-items: flex-end
	margin-right: 6.94rem
	margin-top: 2.3rem
	.old-price {
		font-size: rem(26);
		line-height: rem(39);
	}
	
	.new-price {
		margin: 0
		font-size: rem(50);
		line-height: rem(52);
	}
}

.product__form {
	width: 100%
	max-width: rem(360)
	margin-left: 5rem;
	margin-top: 0.3rem;
}
	.order-form{
		input{
			width: 100%
			border: 1px solid #FFFFFF;
			background: transparent
			padding: rem(13) rem(30)
			font-size: rem(16);
			line-height: rem(24);
			font-weight: 400
			color: #fff;
			font-family: 'Poppins', sans-serif;
			text-transform: capitalize
			margin-bottom: 1.5rem
			&::placeholder{
				font-size: rem(16);
				line-height: rem(24);
				font-weight: 400
				color: #fff;
				font-family: 'Poppins', sans-serif;
				opacity: 1
			}
			&:invalid {
				box-shadow: none;
			}
		}
		button{
			width: 16.88rem;
			margin: 0.3rem auto 0;
			display: block;
		}
	}