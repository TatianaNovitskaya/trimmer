.our-pluses {
	background: #ffffff
	padding: 4.9rem 0 5.6rem
	position: relative
}
.our-pluses__wrap{
	display: flex
	justify-content: space-between
	align-items: flex-start
}
.our-pluses__item {
	width: 100%
	max-width: rem(263)
	min-height rem(263)
	background: #FFFFFF;
	padding: 0.9rem
	box-shadow: 0px 0px 25px rgba(114, 114, 114, 0.15);
	position: relative
	display: flex
	flex-direction: column
	justify-content: flex-start
	align-items: center
	transition transform 300ms ease-in-out
	z-index: 5
	&:before, &:after{
		content ""
		display: block;
		position: absolute;
		background: url("../images/corner.png") no-repeat
		width: rem(120)
		height: rem(120)
		z-index: -1
		transition transform 300ms ease-in-out
	}
	&:before {
		top: -3.5rem
		right: -3.5rem
	}
	&:after {
		bottom: -3.5rem
		left: -3.5rem
		transform rotate(180deg)
	}
	&:hover{
		transform scale(1.05)
		&:before {
			transform translate(-10%, 10%)
		}
		&:after {
			transform rotate(180deg) translate(-10%, 10%)
		}
	}
}

.our-pluses__item-icon {
	width: rem(67)
	height: rem(67)
	display: flex
	justify-content: center
	align-items: center
}
	.our-pluses__item-txt{
		text-align: center
		width: 100%
		h3{
			font-size: rem(18);
			line-height: rem(27);
			font-weight: 500
			color: #2a2a2a
			margin-top: rem(15)
		}
		p{
			font-size: rem(14);
			line-height: rem(21);
			font-weight: 400
			color: #000000
			margin-top: rem(10)
		}
	}